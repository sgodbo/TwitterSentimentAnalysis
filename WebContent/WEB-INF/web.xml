<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>TwitterSentimentAnalysis</display-name>
  <welcome-file-list>
  	<welcome-file>welcome.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>jersey-servlet</servlet-name>
    <servlet-class>
                     com.sun.jersey.spi.container.servlet.ServletContainer
                </servlet-class>
    <init-param>
      <param-name>com.sun.jersey.config.property.packages</param-name>
      <param-value>com.shan.twitterrest</param-value>
    </init-param>
  </servlet>
  <servlet>
    <servlet-name>twit-servlet</servlet-name>
    <servlet-class>com.shan.twitterrest.TwitterAnalysisRest</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>jersey-servlet</servlet-name>
    <url-pattern>/rest/*</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>WelcomeFormServlet</servlet-name>
    <servlet-class>com.shan.twitdatarep.WelcomeFormServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>WelcomeFormServlet</servlet-name>
    <url-pattern>/welcome</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>Test</servlet-name>
    <servlet-class>com.shan.twitdatarep.TestServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Test</servlet-name>
    <url-pattern>/test</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>ViewGraph</servlet-name>
    <servlet-class>com.shan.twitdatarep.ViewGraphServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ViewGraph</servlet-name>
    <url-pattern>/viewgraph</url-pattern>
  </servlet-mapping>
</web-app>